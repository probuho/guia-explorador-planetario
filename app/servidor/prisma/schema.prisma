generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  email       String       @unique
  contrase√±a String
  nombre      String? 
  apellido    String? 
  nickname    String? 
  puntuacion  Puntuacion[]
}

model Especies {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  nombre       String?
  tamano       Int?
  peso         Int?
  habitat      String?
  alimentacion String?
  tipo         String?
  descripcion  String?
}

model Puntuacion {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  puntuacion  String?
}